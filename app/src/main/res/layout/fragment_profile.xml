<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:background="@drawable/circle_background"
            android:padding="10dp"
            app:tint="#555555" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/btnEditProfile" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawablePadding="15dp"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="#333333"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Settings"
                android:drawableStart="@android:drawable/ic_menu_preferences"
                android:drawablePadding="15dp"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="#333333"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help &amp; Support"
                android:drawableStart="@android:drawable/ic_menu_help"
                android:drawablePadding="15dp"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Log Out"
        android:textSize="16sp"
        android:backgroundTint="#FFEBEE"
        android:textColor="#D32F2F"
        app:cornerRadius="12dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>